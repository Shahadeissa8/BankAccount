@model LoginViewModel

@{
	ViewData["Title"] = "Login page";
}

<h1>Login</h1>

<form method="post" asp-action="Login">
	<table class="table table-bordered">
		<div asp-validation-summary="All" class="text-danger"></div>
		<tr>
			<th><label asp-for="Name">Enter your name</label></th>
			<td>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text text-danger"></span>
			</td>
		</tr>
		<tr>
			<th><label asp-for="Password">Enter your password</label></th>
			<td>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text text-danger"></span>
			</td>
		</tr>
		<tr>
			<th><label asp-for="RememberMe"></label></th>
			<td>
				<input asp-for="RememberMe" class="form-check-input" />
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-action="Register" asp-controller="Account" class="btn btn-success">Create an account</a>
				@* <a asp-action="Cancel" asp-controller="Account" class="btn btn-success">Cancel</a> *@
			</td>
		</tr>
	</table>
</form>

